<tr>
   <th scope="row"></th>
 		<td><%=  date_formate(daily_task.created_at.to_date)%></td>
  	<td ><button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal-<%=daily_task.id%>"><%= raw daily_task.description.slice(0,15) + "..." %></button>
  	</td> 
  	<td>
  		<% if current_employee.is_hr? %>
        	<%= daily_task.employee.name %>
      	<% end %>
  	</td> 
  	<td>
  		<%= link_to "Show", daily_task_path(daily_task),class: "btn btn-primary"%> 
    	<% if daily_task.created_at.to_date == Time.now.to_date %>
      		<%= link_to "edit", edit_daily_task_path(daily_task),class: "btn btn-primary"%>
    	<% end %>
    </td>
</tr>

<div class="container">
<div class="modal fade" id="myModal-<%=daily_task.id%>" role="dialog">
  <div class="modal-dialog">

  <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
      	<h4 class="modal-title"></h4>
      </div>
      <div class="p-5">
      	<%= raw daily_task.description %>
      </div>
      <div class="modal-footer">
      	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
</div>
