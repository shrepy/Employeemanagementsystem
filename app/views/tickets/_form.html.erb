    <%= form.label :ticket_type %>
    <%= form.select(:ticket_type, Ticket.ticket_types, {}, { :class => 'form-control mt-2 mb-3' }) %>
  </div>

  <%= form.hidden_field :employee_id, value: current_employee.id %> 

  <div class="actions">
    <%= form.submit 'Send', class: 'btn btn-primary' %>
  </div>
<% end %>
